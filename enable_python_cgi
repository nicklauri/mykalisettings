$ sudo apt install libapache2-mod-python
$ sudo a2enmod cgi
$ sudo leafpad /etc/apache2/apache2.conf
	(line 170)
	<Directory /var/www/>
		Options Indexes FollowSymLinks
		Options +ExecCGI
		AddHandler cgi-script .py .kproj
		AllowOverride None
		Require all granted
	</Directory>
$ sudo service apache2 start # or `restart`
